{
    "name": "cloudflight",
    "version": "0.7.0",
    "scripts": {
        "build": "yarn workspaces foreach -pt run build-package",
        "lint": "eslint . && prettier --check .",
        "test": "yarn workspaces foreach -p run test-package",
        "postinstall": "husky install && git update-index --chmod=+x ./.husky/pre-commit",
        "publish-workspaces": "node ./scripts/prepare.js && yarn workspaces foreach --no-private npm publish"
    },
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "author": "Cloudflight GmbH",
    "license": "Apache-2.0",
    "keywords": [
        "stylelint",
        "stylelintplugin"
    ],
    "homepage": "https://github.com/cloudflightio/cloudflight-stylelint-plugin",
    "bugs": {
        "url": "https://github.com/cloudflightio/cloudflight-stylelint-plugin/issues"
    },
    "volta": {
        "node": "18.17.1",
        "yarn": "4.0.0-rc.48"
    },
    "dependencies": {
        "postcss": "8.4.29",
        "postcss-html": "1.5.0",
        "postcss-scss": "4.0.7",
        "stylelint": "15.10.3",
        "stylelint-config-html": "1.1.0",
        "stylelint-config-standard-scss": "10.0.0",
        "stylelint-high-performance-animation": "1.9.0",
        "stylelint-order": "6.0.3",
        "tslib": "2.6.2"
    },
    "devDependencies": {
        "@cloudflight/eslint-plugin-typescript": "0.20.1",
        "@cloudflight/prettier-config": "0.18.0",
        "@rushstack/eslint-patch": "1.3.3",
        "@types/jest": "29.5.4",
        "@types/node": "18.17.12",
        "eslint": "8.50.0",
        "eslint-config-prettier": "9.0.0",
        "eslint-plugin-import": "2.28.1",
        "husky": "8.0.3",
        "jest": "29.6.4",
        "lint-staged": "14.0.1",
        "prettier": "3.0.3",
        "ts-jest": "29.1.1",
        "ts-node": "10.9.1",
        "typescript": "5.2.2"
    },
    "lint-staged": {
        "**/*": "prettier --write --ignore-unknown"
    }
}
