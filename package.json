{
    "name": "cloudflight",
    "version": "0.7.0",
    "scripts": {
        "build": "yarn workspaces foreach -ptA run build-package",
        "lint": "eslint . && eslint --config .eslintrc.format.js .",
        "test": "yarn workspaces foreach -pA run test-package",
        "postinstall": "husky install && git update-index --chmod=+x ./.husky/pre-commit",
        "publish-workspaces": "node ./scripts/prepare.js && yarn workspaces foreach -A --no-private npm publish"
    },
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "author": "Cloudflight GmbH",
    "license": "Apache-2.0",
    "keywords": [
        "stylelint",
        "stylelintplugin"
    ],
    "homepage": "https://github.com/cloudflightio/cloudflight-stylelint-plugin",
    "bugs": {
        "url": "https://github.com/cloudflightio/cloudflight-stylelint-plugin/issues"
    },
    "volta": {
        "node": "18.17.1",
        "yarn": "4.0.0-rc.52"
    },
    "dependencies": {
        "postcss": "8.4.31",
        "postcss-html": "1.5.0",
        "postcss-scss": "4.0.9",
        "stylelint": "15.11.0",
        "stylelint-config-html": "1.1.0",
        "stylelint-config-standard-scss": "11.0.0",
        "stylelint-high-performance-animation": "1.9.0",
        "stylelint-order": "6.0.3",
        "tslib": "2.6.2"
    },
    "devDependencies": {
        "@cloudflight/eslint-plugin-typescript": "0.20.5",
        "@rushstack/eslint-patch": "1.5.1",
        "@types/jest": "29.5.5",
        "@types/node": "18.18.1",
        "eslint": "8.50.0",
        "eslint-plugin-import": "2.28.1",
        "husky": "8.0.3",
        "jest": "29.7.0",
        "lint-staged": "14.0.1",
        "ts-jest": "29.1.1",
        "ts-node": "10.9.1",
        "typescript": "5.2.2"
    },
    "lint-staged": {
        "*.ts": "eslint --config .eslintrc.format.js --fix",
        "*.js": "eslint --config .eslintrc.format.js --fix"
    }
}
